@model IEnumerable<Doan_ChuyenMon.Models.LoaiSP>

@{
    ViewBag.Title = "Timkiem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Tìm kiếm loại sản phẩm</h2>
<form class="form-inline" action="@Url.Action("Timkiem","LoaiSPs")" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nhập thông tin cần tìm</label>
        <input type="text" class="form-control" name="keyword" id="example" placeholder="nhập tên Loại sp cần tìm">
        <button type="submit" class="btn btn-default">Tìm</button>
    </div>

</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mota)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Ma }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Ma }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.Ma })
            </td>
        </tr>
    }

</table>
