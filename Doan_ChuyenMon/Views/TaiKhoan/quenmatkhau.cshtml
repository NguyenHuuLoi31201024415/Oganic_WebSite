@model IEnumerable<Doan_ChuyenMon.Models.KhachHang>

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#">Quên mật khẩu</a></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Cài đặt lại mật khẩu</h2>
            </div>
        </div>
    </div>
    <div class="dktk">
        @if (ViewBag.mess != null)
            {
            <div class="thongbao alert alert-danger">@ViewBag.mess</div>
        }
        <form action="@Url.Action("quenmatkhau","TaiKhoan")" method="post">
            <div class="form-group">
                <input type="email" class="form-control form-control-user" id="exampleInputEmail" name="txtemail" required placeholder="Email">
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Gửi" />
            <br />
            <a href="@Url.Action("dangnhap","TaiKhoan")">Bỏ qua</a>
        </form>
    </div>
</div>

