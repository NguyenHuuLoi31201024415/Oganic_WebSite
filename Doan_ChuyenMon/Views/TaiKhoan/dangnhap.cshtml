@model IEnumerable<Doan_ChuyenMon.Models.KhachHang>

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#">Đăng nhập</a></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Đăng nhập</h2>
            </div>
        </div>
    </div>
    <div class="dktk">
        @if (ViewBag.ms1 != null)
            {
            <div class="thongbao alert alert-danger">@ViewBag.ms1</div>
        }
        <form action="@Url.Action("dangnhap","TaiKhoan")" method="post">
            <div class="form-group">
                <input type="email" class="form-control form-control-user" id="exampleInputEmail" name="txtemail" required placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control form-control-user" id="exampleInputPassword" name="txtpassword" required placeholder="Mật khẩu">
            </div>
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng nhập" />
            <br />
            <a href="@Url.Action("Index","Home")">Trở về</a>
            <br />
            <a href="@Url.Action("dangky","TaiKhoan")">Đăng ký</a>
            <br />
            <a href="@Url.Action("quenmatkhau","TaiKhoan")">Quên mật khẩu ?</a>
        </form>
    </div>
</div>


